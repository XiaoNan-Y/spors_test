{"remainingRequest":"C:\\Users\\HP\\Desktop\\sports_test\\sports_front\\node_modules\\vue-loader\\lib\\index.js??vue-loader-options!C:\\Users\\HP\\Desktop\\sports_test\\sports_front\\src\\views\\student\\NoticeList.vue?vue&type=style&index=0&id=335c72b8&scoped=true&lang=css","dependencies":[{"path":"C:\\Users\\HP\\Desktop\\sports_test\\sports_front\\src\\views\\student\\NoticeList.vue","mtime":1742782770275},{"path":"C:\\Users\\HP\\Desktop\\sports_test\\sports_front\\node_modules\\css-loader\\dist\\cjs.js","mtime":1741946995932},{"path":"C:\\Users\\HP\\Desktop\\sports_test\\sports_front\\node_modules\\vue-loader\\lib\\loaders\\stylePostLoader.js","mtime":1741947007541},{"path":"C:\\Users\\HP\\Desktop\\sports_test\\sports_front\\node_modules\\postcss-loader\\src\\index.js","mtime":1741947003089},{"path":"C:\\Users\\HP\\Desktop\\sports_test\\sports_front\\node_modules\\cache-loader\\dist\\cjs.js","mtime":1741946992817},{"path":"C:\\Users\\HP\\Desktop\\sports_test\\sports_front\\node_modules\\vue-loader\\lib\\index.js","mtime":1741947007540}],"contextDependencies":[],"result":[{"type":"Buffer","data":"base64:"},{"version":3,"sources":["NoticeList.vue"],"names":[],"mappings":";AAgMA;AACA;AACA;;AAEA;AACA;AACA;;AAEA;AACA;AACA;AACA;;AAEA;AACA;AACA;;AAEA;AACA;AACA;AACA;AACA;;AAEA;AACA;AACA;AACA","file":"NoticeList.vue","sourceRoot":"src/views/student","sourcesContent":["<template>\r\n  <div class=\"notice-list\">\r\n    <el-card class=\"box-card\">\r\n      <div slot=\"header\" class=\"clearfix\">\r\n        <span>通知公告</span>\r\n      </div>\r\n      \r\n      <el-table\r\n        v-loading=\"loading\"\r\n        :data=\"notices\"\r\n        style=\"width: 100%\"\r\n      >\r\n        <el-table-column\r\n          prop=\"title\"\r\n          label=\"标题\"\r\n          min-width=\"200\"\r\n        >\r\n          <template slot-scope=\"scope\">\r\n            <h3>{{ scope.row.title }}</h3>\r\n          </template>\r\n        </el-table-column>\r\n        \r\n        <el-table-column\r\n          prop=\"type\"\r\n          label=\"类型\"\r\n          width=\"120\"\r\n        >\r\n          <template slot-scope=\"scope\">\r\n            <el-tag :type=\"getNoticeTypeTag(scope.row.type)\">\r\n              {{ getNoticeType(scope.row.type) }}\r\n            </el-tag>\r\n          </template>\r\n        </el-table-column>\r\n\r\n        <el-table-column\r\n          prop=\"createTime\"\r\n          label=\"发布时间\"\r\n          width=\"180\"\r\n        >\r\n          <template slot-scope=\"scope\">\r\n            {{ formatDate(scope.row.createTime) }}\r\n          </template>\r\n        </el-table-column>\r\n\r\n        <el-table-column\r\n          label=\"范围\"\r\n          width=\"120\"\r\n        >\r\n          <template slot-scope=\"scope\">\r\n            <el-tag type=\"info\">\r\n              {{ scope.row.isGlobal ? '全体通知' : '班级通知' }}\r\n            </el-tag>\r\n          </template>\r\n        </el-table-column>\r\n\r\n        <el-table-column\r\n          label=\"操作\"\r\n          width=\"120\"\r\n        >\r\n          <template slot-scope=\"scope\">\r\n            <el-button\r\n              type=\"text\"\r\n              @click=\"showNoticeDetail(scope.row)\"\r\n            >\r\n              查看详情\r\n            </el-button>\r\n          </template>\r\n        </el-table-column>\r\n      </el-table>\r\n\r\n      <div class=\"pagination-container\">\r\n        <el-pagination\r\n          @size-change=\"handleSizeChange\"\r\n          @current-change=\"handleCurrentChange\"\r\n          :current-page=\"currentPage\"\r\n          :page-sizes=\"[10, 20, 50]\"\r\n          :page-size=\"pageSize\"\r\n          layout=\"total, sizes, prev, pager, next, jumper\"\r\n          :total=\"total\"\r\n        >\r\n        </el-pagination>\r\n      </div>\r\n    </el-card>\r\n\r\n    <!-- 通知详情对话框 -->\r\n    <el-dialog\r\n      title=\"通知详情\"\r\n      :visible.sync=\"dialogVisible\"\r\n      width=\"50%\"\r\n    >\r\n      <div v-if=\"currentNotice\" class=\"notice-detail\">\r\n        <h2>{{ currentNotice.title }}</h2>\r\n        <div class=\"notice-meta\">\r\n          <el-tag :type=\"getNoticeTypeTag(currentNotice.type)\" size=\"small\">\r\n            {{ getNoticeType(currentNotice.type) }}\r\n          </el-tag>\r\n          <span class=\"time\">发布时间：{{ formatDate(currentNotice.createTime) }}</span>\r\n        </div>\r\n        <div class=\"notice-content\">\r\n          {{ currentNotice.content }}\r\n        </div>\r\n      </div>\r\n    </el-dialog>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nexport default {\r\n  name: 'NoticeList',\r\n  data() {\r\n    return {\r\n      notices: [],\r\n      loading: false,\r\n      currentPage: 1,\r\n      pageSize: 10,\r\n      total: 0,\r\n      dialogVisible: false,\r\n      currentNotice: null\r\n    }\r\n  },\r\n  created() {\r\n    this.fetchNotices()\r\n  },\r\n  methods: {\r\n    async fetchNotices() {\r\n      this.loading = true\r\n      try {\r\n        const response = await this.$http.get('/api/student/notices', {\r\n          params: {\r\n            page: this.currentPage,\r\n            size: this.pageSize\r\n          }\r\n        })\r\n        if (response.data.code === 200) {\r\n          const data = response.data.data\r\n          this.notices = data.content\r\n          this.total = data.totalElements\r\n        } else {\r\n          this.$message.error(response.data.msg || '获取通知列表失败')\r\n        }\r\n      } catch (error) {\r\n        console.error('获取通知列表失败:', error)\r\n        this.$message.error('获取通知列表失败')\r\n      } finally {\r\n        this.loading = false\r\n      }\r\n    },\r\n    \r\n    handleSizeChange(val) {\r\n      this.pageSize = val\r\n      this.fetchNotices()\r\n    },\r\n    \r\n    handleCurrentChange(val) {\r\n      this.currentPage = val\r\n      this.fetchNotices()\r\n    },\r\n    \r\n    showNoticeDetail(notice) {\r\n      this.currentNotice = notice\r\n      this.dialogVisible = true\r\n    },\r\n    \r\n    formatDate(date) {\r\n      if (!date) return ''\r\n      return new Date(date).toLocaleString()\r\n    },\r\n    \r\n    getNoticeType(type) {\r\n      const types = {\r\n        TEST_SCHEDULE: '测试安排',\r\n        SCORE_RELEASE: '成绩发布',\r\n        SYSTEM_MAINTENANCE: '系统维护',\r\n        OTHER: '其他'\r\n      }\r\n      return types[type] || type\r\n    },\r\n    \r\n    getNoticeTypeTag(type) {\r\n      const types = {\r\n        TEST_SCHEDULE: 'primary',\r\n        SCORE_RELEASE: 'success',\r\n        SYSTEM_MAINTENANCE: 'warning',\r\n        OTHER: 'info'\r\n      }\r\n      return types[type] || 'info'\r\n    }\r\n  }\r\n}\r\n</script>\r\n\r\n<style scoped>\r\n.notice-list {\r\n  padding: 20px;\r\n}\r\n\r\n.notice-detail {\r\n  padding: 20px;\r\n}\r\n\r\n.notice-meta {\r\n  margin: 15px 0;\r\n  color: #909399;\r\n}\r\n\r\n.notice-meta .time {\r\n  margin-left: 15px;\r\n}\r\n\r\n.notice-content {\r\n  margin-top: 20px;\r\n  line-height: 1.6;\r\n  white-space: pre-wrap;\r\n}\r\n\r\n.pagination-container {\r\n  margin-top: 20px;\r\n  text-align: right;\r\n}\r\n</style> "]}]}