{"remainingRequest":"C:\\Users\\HP\\Desktop\\sports_test\\sports_front\\node_modules\\vue-loader\\lib\\index.js??vue-loader-options!C:\\Users\\HP\\Desktop\\sports_test\\sports_front\\src\\views\\student\\ExemptionApplication.vue?vue&type=style&index=0&id=55fa1656&scoped=true&lang=css","dependencies":[{"path":"C:\\Users\\HP\\Desktop\\sports_test\\sports_front\\src\\views\\student\\ExemptionApplication.vue","mtime":1742349721672},{"path":"C:\\Users\\HP\\Desktop\\sports_test\\sports_front\\node_modules\\css-loader\\dist\\cjs.js","mtime":1741946995932},{"path":"C:\\Users\\HP\\Desktop\\sports_test\\sports_front\\node_modules\\vue-loader\\lib\\loaders\\stylePostLoader.js","mtime":1741947007541},{"path":"C:\\Users\\HP\\Desktop\\sports_test\\sports_front\\node_modules\\postcss-loader\\src\\index.js","mtime":1741947003089},{"path":"C:\\Users\\HP\\Desktop\\sports_test\\sports_front\\node_modules\\cache-loader\\dist\\cjs.js","mtime":1741946992817},{"path":"C:\\Users\\HP\\Desktop\\sports_test\\sports_front\\node_modules\\vue-loader\\lib\\index.js","mtime":1741947007540}],"contextDependencies":[],"result":[{"type":"Buffer","data":"base64:"},{"version":3,"sources":["ExemptionApplication.vue"],"names":[],"mappings":";AAoTA;AACA;AACA;;AAEA;AACA;AACA;;AAEA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;;AAEA;AACA;AACA;AACA;AACA;AACA;;AAEA;AACA;AACA;;AAEA;AACA;AACA;AACA;;AAEA;AACA;AACA;AACA;AACA","file":"ExemptionApplication.vue","sourceRoot":"src/views/student","sourcesContent":["<template>\r\n  <div class=\"exemption-application\">\r\n    <div class=\"header\">\r\n      <h2>免测/重测申请</h2>\r\n    </div>\r\n\r\n    <!-- 申请表单 -->\r\n    <el-form \r\n      ref=\"applicationForm\" \r\n      :model=\"applicationForm\" \r\n      :rules=\"rules\" \r\n      label-width=\"100px\"\r\n      class=\"application-form\"\r\n    >\r\n      <el-form-item label=\"申请类型\" prop=\"type\">\r\n        <el-radio-group v-model=\"applicationForm.type\">\r\n          <el-radio label=\"EXEMPTION\">免测申请</el-radio>\r\n          <el-radio label=\"RETEST\">重测申请</el-radio>\r\n        </el-radio-group>\r\n      </el-form-item>\r\n\r\n      <el-form-item label=\"测试项目\" prop=\"sportsItemId\">\r\n        <el-select v-model=\"applicationForm.sportsItemId\" placeholder=\"请选择测试项目\">\r\n          <el-option\r\n            v-for=\"item in sportsItems\"\r\n            :key=\"item.id\"\r\n            :label=\"item.name\"\r\n            :value=\"item.id\"\r\n          />\r\n        </el-select>\r\n      </el-form-item>\r\n\r\n      <el-form-item label=\"申请原因\" prop=\"reason\">\r\n        <el-input\r\n          type=\"textarea\"\r\n          v-model=\"applicationForm.reason\"\r\n          :rows=\"4\"\r\n          placeholder=\"请详细说明申请原因\"\r\n        />\r\n      </el-form-item>\r\n\r\n      <el-form-item label=\"附件\">\r\n        <el-upload\r\n          class=\"upload-demo\"\r\n          action=\"/api/upload\"\r\n          :on-success=\"handleUploadSuccess\"\r\n          :on-error=\"handleUploadError\"\r\n          :before-upload=\"beforeUpload\"\r\n        >\r\n          <el-button size=\"small\" type=\"primary\">点击上传</el-button>\r\n          <div slot=\"tip\" class=\"el-upload__tip\">只能上传jpg/png/pdf文件</div>\r\n        </el-upload>\r\n      </el-form-item>\r\n\r\n      <el-form-item>\r\n        <el-button type=\"primary\" @click=\"submitApplication\">提交申请</el-button>\r\n        <el-button @click=\"resetForm\">重置</el-button>\r\n      </el-form-item>\r\n    </el-form>\r\n\r\n    <!-- 申请记录表格 -->\r\n    <div class=\"application-records\">\r\n      <h3>申请记录</h3>\r\n      <el-table\r\n        v-loading=\"loading\"\r\n        :data=\"records\"\r\n        border\r\n        stripe\r\n        style=\"width: 100%\"\r\n      >\r\n        <el-table-column type=\"index\" label=\"序号\" width=\"60\" align=\"center\"/>\r\n        <el-table-column label=\"申请类型\" align=\"center\">\r\n          <template slot-scope=\"scope\">\r\n            {{ scope.row.type === 'EXEMPTION' ? '免测' : '重测' }}\r\n          </template>\r\n        </el-table-column>\r\n        <el-table-column label=\"测试项目\" min-width=\"120\" align=\"center\">\r\n          <template slot-scope=\"scope\">\r\n            {{ scope.row.sportsItem ? scope.row.sportsItem.name : '-' }}\r\n          </template>\r\n        </el-table-column>\r\n        <el-table-column label=\"申请原因\" prop=\"reason\" show-overflow-tooltip/>\r\n        <el-table-column label=\"申请时间\" align=\"center\">\r\n          <template slot-scope=\"scope\">\r\n            {{ formatDateTime(scope.row.applyTime) }}\r\n          </template>\r\n        </el-table-column>\r\n        <el-table-column label=\"状态\" align=\"center\">\r\n          <template slot-scope=\"scope\">\r\n            <el-tag :type=\"getStatusType(scope.row.status)\">\r\n              {{ getStatusText(scope.row.status) }}\r\n            </el-tag>\r\n          </template>\r\n        </el-table-column>\r\n        <el-table-column label=\"审核意见\" show-overflow-tooltip>\r\n          <template slot-scope=\"scope\">\r\n            {{ getReviewComment(scope.row) }}\r\n          </template>\r\n        </el-table-column>\r\n      </el-table>\r\n\r\n      <div class=\"pagination-container\">\r\n        <el-pagination\r\n          @size-change=\"handleSizeChange\"\r\n          @current-change=\"handleCurrentChange\"\r\n          :current-page=\"currentPage\"\r\n          :page-sizes=\"[10, 20, 50]\"\r\n          :page-size=\"pageSize\"\r\n          layout=\"total, sizes, prev, pager, next, jumper\"\r\n          :total=\"total\"\r\n        />\r\n      </div>\r\n    </div>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nimport { formatDateTime } from '@/utils/datetime'\r\n\r\nexport default {\r\n  name: 'ExemptionApplication',\r\n  \r\n  data() {\r\n    return {\r\n      // 申请表单\r\n      applicationForm: {\r\n        type: 'EXEMPTION',\r\n        sportsItemId: null,\r\n        reason: '',\r\n        attachmentUrl: ''\r\n      },\r\n      \r\n      // 表单验证规则\r\n      rules: {\r\n        type: [\r\n          { required: true, message: '请选择申请类型', trigger: 'change' }\r\n        ],\r\n        sportsItemId: [\r\n          { required: true, message: '请选择测试项目', trigger: 'change' }\r\n        ],\r\n        reason: [\r\n          { required: true, message: '请填写申请原因', trigger: 'blur' },\r\n          { min: 10, message: '申请原因至少10个字符', trigger: 'blur' }\r\n        ]\r\n      },\r\n      \r\n      // 体育项目列表\r\n      sportsItems: [],\r\n      \r\n      // 申请记录\r\n      loading: false,\r\n      records: [],\r\n      currentPage: 1,\r\n      pageSize: 10,\r\n      total: 0\r\n    }\r\n  },\r\n\r\n  created() {\r\n    this.fetchSportsItems()\r\n    this.fetchRecords()\r\n  },\r\n\r\n  methods: {\r\n    // 获取体育项目列表\r\n    async fetchSportsItems() {\r\n      try {\r\n        const response = await this.$http.get('/api/sports-items')\r\n        if (response.data.code === 200) {\r\n          this.sportsItems = response.data.data\r\n        }\r\n      } catch (error) {\r\n        console.error('获取体育项目失败:', error)\r\n        this.$message.error('获取体育项目失败')\r\n      }\r\n    },\r\n\r\n    // 获取申请记录\r\n    async fetchRecords() {\r\n      this.loading = true\r\n      try {\r\n        const response = await this.$http.get('/api/student/exemption-applications', {\r\n          params: {\r\n            page: this.currentPage - 1,\r\n            size: this.pageSize\r\n          }\r\n        })\r\n        \r\n        if (response.data.code === 200) {\r\n          const { content, totalElements } = response.data.data\r\n          this.records = content\r\n          this.total = totalElements\r\n        }\r\n      } catch (error) {\r\n        console.error('获取申请记录失败:', error)\r\n        this.$message.error('获取申请记录失败')\r\n      } finally {\r\n        this.loading = false\r\n      }\r\n    },\r\n\r\n    // 提交申请\r\n    submitApplication() {\r\n      this.$refs.applicationForm.validate(async (valid) => {\r\n        if (valid) {\r\n          try {\r\n            const response = await this.$http.post('/api/student/exemption-applications', this.applicationForm)\r\n            \r\n            if (response.data.code === 200) {\r\n              this.$message.success('申请提交成功')\r\n              this.resetForm()\r\n              this.fetchRecords()\r\n            } else {\r\n              this.$message.error(response.data.msg || '申请提交失败')\r\n            }\r\n          } catch (error) {\r\n            console.error('提交申请失败:', error)\r\n            this.$message.error('提交申请失败')\r\n          }\r\n        }\r\n      })\r\n    },\r\n\r\n    // 重置表单\r\n    resetForm() {\r\n      this.$refs.applicationForm.resetFields()\r\n      this.applicationForm.attachmentUrl = ''\r\n    },\r\n\r\n    // 文件上传相关方法\r\n    beforeUpload(file) {\r\n      const isValidType = ['image/jpeg', 'image/png', 'application/pdf'].includes(file.type)\r\n      const isLt5M = file.size / 1024 / 1024 < 5\r\n\r\n      if (!isValidType) {\r\n        this.$message.error('只能上传JPG/PNG/PDF格式的文件!')\r\n      }\r\n      if (!isLt5M) {\r\n        this.$message.error('文件大小不能超过5MB!')\r\n      }\r\n      \r\n      return isValidType && isLt5M\r\n    },\r\n\r\n    handleUploadSuccess(response) {\r\n      if (response.code === 200) {\r\n        this.applicationForm.attachmentUrl = response.data\r\n        this.$message.success('文件上传成功')\r\n      } else {\r\n        this.$message.error(response.msg || '文件上传失败')\r\n      }\r\n    },\r\n\r\n    handleUploadError() {\r\n      this.$message.error('文件上传失败')\r\n    },\r\n\r\n    // 分页方法\r\n    handleSizeChange(val) {\r\n      this.pageSize = val\r\n      this.fetchRecords()\r\n    },\r\n\r\n    handleCurrentChange(val) {\r\n      this.currentPage = val\r\n      this.fetchRecords()\r\n    },\r\n\r\n    // 工具方法\r\n    formatDateTime,\r\n\r\n    getStatusType(status) {\r\n      const statusMap = {\r\n        'PENDING_TEACHER': 'warning',\r\n        'PENDING_ADMIN': 'warning',\r\n        'APPROVED': 'success',\r\n        'REJECTED': 'danger',\r\n        'REJECTED_TEACHER': 'danger'\r\n      }\r\n      return statusMap[status] || 'info'\r\n    },\r\n\r\n    getStatusText(status) {\r\n      const statusMap = {\r\n        'PENDING_TEACHER': '待教师审核',\r\n        'PENDING_ADMIN': '待管理员审核',\r\n        'APPROVED': '已通过',\r\n        'REJECTED': '已驳回',\r\n        'REJECTED_TEACHER': '教师已驳回'\r\n      }\r\n      return statusMap[status] || status\r\n    },\r\n\r\n    getReviewComment(record) {\r\n      if (record.status === 'REJECTED_TEACHER') {\r\n        return record.teacherReviewComment\r\n      } else if (record.status === 'REJECTED') {\r\n        return record.adminReviewComment\r\n      } else if (record.status === 'APPROVED') {\r\n        return record.adminReviewComment || record.teacherReviewComment\r\n      }\r\n      return '-'\r\n    }\r\n  }\r\n}\r\n</script>\r\n\r\n<style scoped>\r\n.exemption-application {\r\n  padding: 20px;\r\n}\r\n\r\n.header {\r\n  margin-bottom: 20px;\r\n}\r\n\r\n.application-form {\r\n  max-width: 800px;\r\n  margin-bottom: 40px;\r\n  background-color: #fff;\r\n  padding: 20px;\r\n  border-radius: 4px;\r\n  box-shadow: 0 2px 12px 0 rgba(0,0,0,0.1);\r\n}\r\n\r\n.application-records {\r\n  background-color: #fff;\r\n  padding: 20px;\r\n  border-radius: 4px;\r\n  box-shadow: 0 2px 12px 0 rgba(0,0,0,0.1);\r\n}\r\n\r\n.application-records h3 {\r\n  margin-bottom: 20px;\r\n}\r\n\r\n.pagination-container {\r\n  margin-top: 20px;\r\n  text-align: right;\r\n}\r\n\r\n.el-upload__tip {\r\n  line-height: 1.2;\r\n  padding-top: 5px;\r\n  color: #909399;\r\n}\r\n</style> "]}]}