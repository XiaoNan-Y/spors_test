"选择状态\" clearable>\r\n            <el-option label=\"待处理\" value=\"PENDING\"/>\r\n            <el-option label=\"已回复\" value=\"REPLIED\"/>\r\n            <el-option label=\"已关闭\" value=\"CLOSED\"/>\r\n          </el-select>\r\n        </el-form-item>\r\n        <el-form-item>\r\n          <el-button type=\"primary\" @click=\"searchFeedbacks\">查询</el-button>\r\n        </el-form-item>\r\n      </el-form>\r\n    </div>\r\n\r\n    <el-table :data=\"feedbackList\" border style=\"width: 100%\">\r\n      <el-table-column prop=\"studentName\" label=\"学生姓名\" width=\"120\"/>\r\n      <el-table-column prop=\"studentNumber\" label=\"学号\" width=\"120\"/>\r\n      <el-table-column prop=\"className\" label=\"班级\" width=\"120\"/>\r\n      <el-table-column prop=\"type\" label=\"类型\" width=\"100\">\r\n        <template #default=\"scope\">\r\n          <el-tag :type=\"getTypeTag(scope.row.type)\">\r\n            {{ getTypeLabel(scope.row.type) }}\r\n          </el-tag>\r\n        </template>\r\n      </el-table-column>\r\n      <el-table-column prop=\"content\" label=\"反馈内容\"/>\r\n      <el-table-column prop=\"createTime\" label=\"提交时间\" width=\"180\"/>\r\n      <el-table-column prop=\"status\" label=\"状态\" width=\"100\">\r\n        <template #default=\"scope\">\r\n          <el-tag :type=\"getStatusTag(scope.row.status)\">\r\n            {{ getStatusLabel(scope.row.status) }}\r\n          </el-tag>\r\n        </template>\r\n      </el-table-column>\r\n      <el-table-column label=\"操作\" width=\"200\" fixed=\"right\">\r\n        <template #default=\"scope\">\r\n          <el-button \r\n            type=\"primary\" \r\n            size=\"small\" \r\n            @click=\"handleReply(scope.row)\"\r\n            :disabled=\"scope.row.status === 'CLOSED'\"\r\n          >\r\n            回复\r\n          </el-button>\r\n          <el-button \r\n            type=\"danger\" \r\n            size=\"small\" \r\n            @click=\"handleClose(scope.row)\"\r\n            :disabled=\"scope.row.status === 'CLOSED'\"\r\n          >\r\n            关闭\r\n          </el-button>\r\n        </template>\r\n      </el-table-column>\r\n    </el-table>\r\n\r\n    <div class=\"pagination\">\r\n      <el-pagination\r\n        background\r\n        layout=\"total, prev, pager, next\"\r\n        :total=\"total\"\r\n        :page-size=\"pageSize\"\r\n        :current-page=\"currentPage\"\r\n        @current-change=\"handlePageChange\"\r\n      />\r\n    </div>\r\n\r\n    <!-- 回复对话框 -->\r\n    <el-dialog\r\n      title=\"回复反馈\"\r\n      v-model=\"replyDialogVisible\"\r\n      width=\"50%\"\r\n    >\r\n      <el-form :model=\"replyForm\" label-width=\"80px\">\r\n        <el-form-item label=\"反馈内容\">\r\n          <div class=\"feedback-content\">{{ currentFeedback?.content }}</div>\r\n        </el-form-item>\r\n        <el-form-item label=\"回复内容\">\r\n          <el-input\r\n            v-model=\"replyForm.reply\"\r\n            type=\"textarea\"\r\n            :rows=\"4\"\r\n            placeholder=\"请输入回复内容\"\r\n          />\r\n        </el-form-item>\r\n      </el-form>\r\n      <template #footer>\r\n        <span class=\"dialog-footer\">\r\n          <el-button @click=\"replyDialogVisible = false\">取消</el-button>\r\n          <el-button type=\"primary\" @click=\"submitReply\">确定</el-button>\r\n        </span>\r\n      </template>\r\n    </el-dialog>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nimport { ref, reactive, onMounted } from 'vue'\r\nimport { ElMessage, ElMessageBox } from 'element-plus'\r\nimport axios from 'axios'\r\n\r\nexport default {\r\n  name: 'FeedbackManagement',\r\n  setup() {\r\n    const feedbackList = ref([])\r\n    const total = ref(0)\r\n    const currentPage = ref(1)\r\n    const pageSize = ref(10)\r\n    const replyDialogVisible = ref(false)\r\n    const currentFeedback = ref(null)\r\n\r\n    const searchForm = reactive({\r\n      type: '',\r\n      status: ''\r\n    })\r\n\r\n    const replyForm = reactive({\r\n      reply: ''\r\n    })\r\n\r\n    // 获取反馈列表\r\n    const getFeedbacks = async () => {\r\n      try {\r\n        const response = await axios.get('/api/admin/feedback', {\r\n          params: {\r\n            type: searchForm.type,\r\n            status: searchForm.status,\r\n            page: currentPage.value,\r\n            size: pageSize.value\r\n          }\r\n        })\r\n        if (response.data.code === 200) {\r\n          feedbackList.value = response.data.data.content\r\n          total.value = response.data.data.totalElements\r\n        }\r\n      } catch (error) {\r\n        ElMessage.error('获取反馈列表失败')\r\n      }\r\n    }\r\n\r\n    // 搜索\r\n    const searchFeedbacks = () => {\r\n      currentPage.value = 1\r\n      getFeedbacks()\r\n    }\r\n\r\n    // 处理回复\r\n    const handleReply = (row) => {\r\n      currentFeedback.value = row\r\n      replyForm.reply = ''\r\n      replyDialogVisible.value = true\r\n    }\r\n\r\n    // 提交回复\r\n    const submitReply = async () => {\r\n      if (!replyForm.reply.trim()) {\r\n        ElMessage.warning('请输入回复内容')\r\n        return\r\n      }\r\n\r\n      try {\r\n        const response = await axios.put(`/api/admin/feedback/${currentFeedback.value.id}/reply`, {\r\n          reply: replyForm.reply\r\n        })\r\n        if (response.data.code === 200) {\r\n          ElMessage.success('回复成功')\r\n          replyDialogVisible.value = false\r\n          getFeedbacks()\r\n        }\r\n      } catch (error) {\r\n        ElMessage.error('回复失败')\r\n      }\r\n    }\r\n\r\n    // 关闭反馈\r\n    const handleClose = (row) => {\r\n      ElMessageBox.confirm('确定要关闭该反馈吗？', '提示', {\r\n        confirmButtonText: '确定',\r\n        cancelButtonText: '取消',\r\n        type: 'warning'\r\n      }).then(async () => {\r\n        try {\r\n          const response = await axios.put(`/api/admin/feedback/${row.id}/status`, null, {\r\n            params: { status: 'CLOSED' }\r\n          })\r\n          if (response.data.code === 200) {\r\n            ElMessage.success('操作成功')\r\n            getFeedbacks()\r\n          }\r\n        } catch (error) {\r\n          ElMessage.error('操作失败')\r\n        }\r\n      })\r\n    }\r\n\r\n    // 页码改变\r\n    const handlePageChange = (page) => {\r\n      currentPage.value = page\r\n      getFeedbacks()\r\n    }\r\n\r\n    // 类型标签\r\n    const getTypeLabel = (type) => {\r\n      const types = {\r\n        'FEATURE': '功能建议',\r\n        'BUG': '问题反馈',\r\n        'OTHER': '其他'\r\n      }\r\n      return types[type] || type\r\n    }\r\n\r\n    const getTypeTag = (type) => {\r\n      const tags = {\r\n        'FEATURE': 'success',\r\n        'BUG': 'danger',\r\n        'OTHER': 'info'\r\n      }\r\n      return tags[type] || ''\r\n    }\r\n\r\n    // 状态标签\r\n    const getStatusLabel = (status) => {\r\n      const statuses = {\r\n        'PENDING': '待处理',\r\n        'REPLIED': '已回复',\r\n        'CLOSED': '已关闭'\r\n      }\r\n      return statuses[status] || status\r\n    }\r\n\r\n    const getStatusTag = (status) => {\r\n      const tags = {\r\n        'PENDING': 'warning',\r\n        'REPLIED': 'success',\r\n        'CLOSED': 'info'\r\n      }\r\n      return tags[status] || ''\r\n    }\r\n\r\n    onMounted(() => {\r\n      getFeedbacks()\r\n    })\r\n\r\n    return {\r\n      feedbackList,\r\n      total,\r\n      currentPage,\r\n      pageSize,\r\n      searchForm,\r\n      replyForm,\r\n      replyDialogVisible,\r\n      currentFeedback,\r\n      searchFeedbacks,\r\n      handleReply,\r\n      submitReply,\r\n      handleClose,\r\n      handlePageChange,\r\n      getTypeLabel,\r\n      getTypeTag,\r\n      getStatusLabel,\r\n      getStatusTag\r\n    }\r\n  }\r\n}\r\n</script>\r\n\r\n<style scoped>\r\n.feedback-management {\r\n  padding: 20px;\r\n}\r\n\r\n.search-bar {\r\n  margin-bottom: 20px;\r\n}\r\n\r\n.pagination {\r\n  margin-top: 20px;\r\n  text-align: right;\r\n}\r\n\r\n.feedback-content {\r\n  padding: 10px;\r\n  background-color: #f5f7fa;\r\n  border-radius: 4px;\r\n  min-height: 60px;\r\n}\r\n\r\n.dialog-footer {\r\n  text-align: right;\r\n}\r\n</style> "]}]}